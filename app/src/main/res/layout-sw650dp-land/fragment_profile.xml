<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".Profile.ProfileFragment"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_topAlbums2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/profile_text_background"
            android:fontFamily="@font/josefin_sans_semibold"
            android:text="  Top Albums"
            android:textColor="@color/light_purple"
            android:textSize="60sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_top_albums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/profile_topGenres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/profile_text_background"
            android:fontFamily="@font/josefin_sans_semibold"
            android:text="  Top Genres"
            android:textColor="@color/light_purple"
            android:textSize="60sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_top_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/profile_currently_listening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@color/darker_purple"
            android:fontFamily="@font/josefin_sans_semibold"
            android:paddingLeft="100dp"
            android:paddingTop="75dp"
            android:paddingRight="100dp"
            android:paddingBottom="75dp"
            android:text="Currently\nListening"
            android:textAlignment="center"
            android:textColor="@color/light_purple"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_to_listen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@color/darker_purple"
            android:fontFamily="@font/josefin_sans_semibold"
            android:paddingLeft="100dp"
            android:paddingTop="75dp"
            android:paddingRight="100dp"
            android:paddingBottom="75dp"
            android:text="To\nListen"
            android:textAlignment="center"
            android:textColor="@color/light_purple"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/profile_currently_listening"
            app:layout_constraintStart_toStartOf="@+id/profile_currently_listening" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>